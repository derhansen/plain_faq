<T3DataStructure>
    <sheets>
        <!-- Sheet: Settings -->
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.additional</sheetTitle>
                <type>array</type>
                <el>
                    <!-- List Pid -->
                    <settings.listPid>
                        <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.listPid</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.listPid>
                </el>
            </ROOT>
        </sDEF>

        <!-- Sheet: Template -->
        <template>
            <ROOT>
                <sheetTitle>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.tab.template</sheetTitle>
                <type>array</type>
                <el>

                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.plugin.field.templateLayout</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <itemsProcFunc>Derhansen\PlainFaq\Hooks\TemplateLayouts->userTemplateLayout</itemsProcFunc>
                            <items>
                                <numIndex index="0" type="array">
                                    <label />
                                    <value />
                                </numIndex>
                            </items>
                        </config>
                    </settings.templateLayout>
                </el>
            </ROOT>
        </template>

    </sheets>
</T3DataStructure>